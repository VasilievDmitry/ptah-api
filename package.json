{
  "name": "ptah.api",
  "version": "1.2.0",
  "description": "Backend for PTAH",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=local nodemon --ignore './public_html' --ignore './sites_enabled' --ignore './node_modules' -w ./ ./index.js",
    "test": "npm run tests:migrations && npm run tests:mocha",
    "migrations:manual": "cross-env NODE_ENV=local migrate-mongo up",
    "tests:migrations": "cross-env NODE_ENV=test DB_NAME=ptah-test DB_USER='' migrate-mongo up",
    "tests:mocha": "cross-env NODE_ENV=test DB_NAME=ptah-test DB_USER='' SERVER_PORT=3001 REDIS_HOST='' MAILCHIMP_METADATA_URL=http://localhost:3002/oauth2/metadata AUTH1_INTROSPECTION_URL=http://localhost:3002/oauth2/introspect node_modules/.bin/mocha --exit --timeout 4000 ./test/index.js",
    "debug:app.mock": "cross-env NODE_ENV=test REDIS_HOST='' MAILCHIMP_METADATA_URL=http://localhost:3002/oauth2/metadata AUTH1_INTROSPECTION_URL=http://localhost:3002/oauth2/introspect nodemon --ignore './public_html' --ignore './sites_enabled' --ignore './node_modules' -w ./ ./index.js",
    "debug:mock.server": "cross-env NODE_ENV=test nodemon --ignore './public_html' --ignore './sites_enabled' --ignore './node_modules' -w ./ ./test/fakes/external-servers-mockup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProtocolONE/ptah.api.git"
  },
  "author": "Evgeniy Strigo",
  "email": "evgeniy.strigo@protocol.one",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ProtocolONE/ptah.api/issues"
  },
  "homepage": "https://github.com/ProtocolONE/ptah.api#readme",
  "dependencies": {
    "@sentry/node": "^4.5.3",
    "bson-objectid": "^1.2.4",
    "cross-env": "^5.2.0",
    "decompress": "^4.2.0",
    "ioredis": "^4.6.2",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-cache-control": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-req-logger": "^1.5.2",
    "koa-router": "^7.4.0",
    "koa-unless": "^1.0.7",
    "lodash": "^4.17.11",
    "migrate-mongo": "^5.0.1",
    "mongodb": "^3.1.13",
    "node-fetch": "^2.3.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.3",
    "string-template": "^1.0.0",
    "token-introspection": "^1.1.0",
    "url-join": "^4.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "chai-spies": "^1.0.0",
    "chai-validate-response": "github:JamesKotov/chai-validate-response#version-0.0.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "url-parse": "^1.4.4"
  }
}
