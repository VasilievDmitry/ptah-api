{
  "name": "ptah.api",
  "version": "1.0.0",
  "description": "Backend for PTAH",
  "main": "index.js",
  "scripts": {
    "start local": "cross-env NODE_ENV=local nodemon --ignore './public_html' --ignore './sites_enabled' --ignore './node_modules' -w ./ ./index.js",
    "migrations local": "cd ./migrations && NODE_ENV=local migrate-mongo up && cd ..",
    "test": "cross-env NODE_ENV=test SERVER_PORT=3001 DB_COLLECTION_NAME=ptah-test node_modules/.bin/mocha --exit --timeout 4000 ./test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProtocolONE/ptah.api.git"
  },
  "author": "Evgeniy Strigo",
  "email": "evgeniy.strigo@protocol.one",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ProtocolONE/ptah.api/issues"
  },
  "homepage": "https://github.com/ProtocolONE/ptah.api#readme",
  "dependencies": {
    "@sentry/node": "^4.5.3",
    "bson-objectid": "^1.2.4",
    "build-url": "^1.3.2",
    "cross-env": "^5.2.0",
    "decompress": "^4.2.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-cache-control": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-http-request": "^2.2.1",
    "koa-jwt": "^3.5.1",
    "koa-req-logger": "^1.5.2",
    "koa-router": "^7.4.0",
