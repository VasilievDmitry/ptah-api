    "parseurl": "^1.3.2",
    "rimraf": "^2.6.3",
    "simple-oauth2": "^2.2.1",
    "string-template": "^1.0.0",
    "url-join": "^4.0.0",
    "url-parse": "^1.4.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "chai-spies": "^1.0.0",
    "chai-validate-response": "github:JamesKotov/chai-validate-response#version-0.0.3",
